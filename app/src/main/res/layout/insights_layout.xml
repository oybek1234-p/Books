<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_12"
    android:layout_height="wrap_content">

    <com.uz.kitoblar.ui.fragments.ImageViewLoader
        android:id="@+id/photo_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_drawable"
        android:layout_marginTop="@dimen/dimen_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/book_name"
        style="@style/Headline3_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:text="“Boy ota kambaga ota”"
        android:textColor="?colorOnSurfaceHigh"
        app:layout_constraintStart_toEndOf="@+id/photo_view"
        app:layout_constraintTop_toTopOf="@+id/photo_view" />

    <TextView
        style="@style/Text1_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kitobidan"
        android:layout_marginStart="@dimen/dimen_8"
        android:textColor="?colorOnSurfaceLow"
        app:layout_constraintStart_toEndOf="@+id/book_name"
        app:layout_constraintTop_toTopOf="@+id/book_name" />

    <TextView
        android:id="@+id/author_name_view"
        style="@style/Subtitle1_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robert Kiyosaki"
        android:textColor="?colorOnSurfaceMedium"
        android:layout_marginTop="@dimen/dimen_4"
        app:layout_constraintStart_toStartOf="@+id/book_name"
        app:layout_constraintTop_toBottomOf="@+id/book_name" />

    <TextView
        android:id="@+id/textView11"
        style="@style/Text1_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dimen_18"
        android:text="Kopchilik pul uchun ishlaydi - boylarga esa pul ishlaydi"
        android:textColor="?colorOnSurfaceHigh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/read_button"
        style="@style/Headline3_15"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_height="wrap_content"
        android:text="Kitobni o'qish"
        android:textColor="?colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/photo_view"
        app:layout_constraintTop_toBottomOf="@+id/photo_view" />
</androidx.constraintlayout.widget.ConstraintLayout>