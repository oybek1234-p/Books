<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/dimen_24"
        android:layout_width="wrap_content"
        android:paddingTop="64dp"
        android:paddingHorizontal="@dimen/dimen_24"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/oval_drawable"
            android:backgroundTint="?colorBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_view"
            style="@style/Title2_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sizda kitoblar mavjud emas"
            android:textColor="?colorOnSurfaceHigh"
            android:layout_marginTop="@dimen/dimen_18"
            app:layout_constraintEnd_toEndOf="@+id/lottie_view"
            app:layout_constraintStart_toStartOf="@+id/lottie_view"
            app:layout_constraintTop_toBottomOf="@+id/lottie_view" />

        <TextView
            android:id="@+id/subtitle_view"
            style="@style/Text1_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_18"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Yangi kitob qo'shish uchun + tugmasini bosing"
            android:textColor="?colorOnSurfaceMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_view" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yangi kitob qoshish"
            style="@style/Headline3_15"
            android:paddingHorizontal="@dimen/dimen_48"
            android:layout_marginTop="@dimen/dimen_18"
            app:layout_constraintEnd_toEndOf="@+id/subtitle_view"
            app:layout_constraintStart_toStartOf="@+id/subtitle_view"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>